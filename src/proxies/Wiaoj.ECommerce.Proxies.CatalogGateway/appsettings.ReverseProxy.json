{
    "ReverseProxy": {
        "Routes": {
            "Catalog-Definition-Route": {
                "ClusterId": "Catalog-Definition-Cluster",
                "RateLimiterPolicy": "fixed",
                "OutputCachePolixy": "20secPolicy",
                "Match": {
                    "Path": "/{**catch-all}"
                },
                "Transforms": [
                    { "PathPrefix": "/api" },
                    //{ "PathPrefix": "/api/v1" },
                    { "ClientCert": "X-Client-Cert" },
                    { "RequestHeadersCopy": "true" },
                    { "RequestHeaderOriginalHost": "true" },
                    {
                        "X-Forwarded": "Append",
                        "HeaderPrefix": "X-Forwarded-"
                    }
                    //{
                    //    "RequestHeader": "catalog-request-header",
                    //    "Append": "catalog request"
                    //},
                    //{
                    //    "ResponseHeader": "catalog-response-header",
                    //    "Append": "catalog response",
                    //    "When": "Always"
                    //}
                ]
            },
            "Catalog-Discovery-Route": {
                "ClusterId": "Catalog-Discovery-Cluster",
                "RateLimiterPolicy": "fixed",
                "OutputCachePolixy": "20secPolicy",
                "Match": {
                    "Path": "/{**catch-all}"
                },
                "Transforms": [
                    { "PathPrefix": "/api" },
                    { "ClientCert": "X-Client-Cert" },
                    { "RequestHeadersCopy": "true" },
                    { "RequestHeaderOriginalHost": "true" },
                    {
                        "X-Forwarded": "Append",
                        "HeaderPrefix": "X-Forwarded-"
                    }
                ]
            }
        },
        "Clusters": {
            "Catalog-Definition-Cluster": {
                "LoadBalancingPolixy": "PowerOfTwoChoices",
                "HttpRequest": {
                    "ActivityTimeout": "00:00:30",
                    "Version": "3",
                    "VersionPolicy": "RequestVersionExact",
                    "AllowResponseBuffering": true
                },
                "Destinations": {
                    "default_catalog": {
                        "Address": "https://localhost:5001"
                    }
                }
            },
            "Catalog-Discovery-Cluster": {
                "LoadBalancingPolixy": "PowerOfTwoChoices",
                "HttpRequest": {
                    "ActivityTimeout": "00:00:30",
                    "Version": "3",
                    "VersionPolicy": "RequestVersionExact",
                    "AllowResponseBuffering": true
                },
                "Destinations": {
                    "default_catalog": {
                        "Address": "https://localhost:5002"
                    }
                }
            }
        }
    }
}